<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/notechat_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/hot_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="热门"
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="@drawable/notechat_selector"



            />
        <TextView
            android:id="@+id/care_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注"
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="@drawable/notechat_selector"

            />

    </LinearLayout>
    <ImageView
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:layout_below="@id/notechat_title"
        android:id="@+id/scrollBar"
        android:scaleType="matrix"
        android:src="@drawable/point_focused"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/notechat_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollBar">

    </android.support.v4.view.ViewPager>

</RelativeLayout>